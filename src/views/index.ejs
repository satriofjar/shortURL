<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <style>
      .hidden{
        display: none;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1 class="text-center my-5">Short URL website</h1>
        <div class="row my-5">
            <form class="col-5 mx-auto" method="post" action="/generate-token">
                <div class="mb-3">
                  <label for="parseUrl" class="form-label">Input your URL</label>
                  <input type="url" class="form-control" id="url" name="url" required autofocus>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
              </form>              
        </div>

        <div class="row <%= hidden %>" id="result">
          <div class="col-5 mx-auto">
            <p class="fw-semibold">Long URL: <a href="" class="fw-normal" target="_blank"><%= url %></a></p>
            <div class="row gy-2">
              <div class="col-8 ">
                <input type="url" id="textToCopy" class="form-control" readonly value="<%= shortUrl %>">
              </div>
              <div class="col">
                <button type="button" class="btn btn-primary" onclick="copyToClipboard()">Copy</button>
              </div>
            </div>
          </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    
    <script>
      function copyToClipboard(){
        const textToCopy = document.getElementById('textToCopy');

        textToCopy.select();
        document.execCommand('copy');
      alert('Text copied to clipboard!');
      }

      function showResult(){
        var resultElement = document.getElementById("result");
        resultElement.classList.remove("hidden");

      }

    </script>
  
  </body>
</html>